generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  role      String
  createdAt DateTime @default(now())
}

model JobOpening {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  location  String
  status    String
  createdAt DateTime @default(now())
}

model ApplicationCounter {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  dateStr String
  counter Int
}
